<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.delivery.DeliveryTimeActivity">
   <TextView
    android:id="@+id/show_time_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/start_time_btn"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="31dp"
    android:text="Nan:Nan AM"
    android:textSize="30sp" />
    <Button
        android:id="@+id/start_time_btn"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Start Time"
        android:textColor="@color/white_color"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/end_time_btn"
        android:padding="10dp"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="End Time"
        android:layout_below="@+id/start_time_btn"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_color"
        android:background="@color/colorGrey2"/>

    <Button
        android:id="@+id/update_time_btn"
        android:padding="10dp"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Update"
        android:layout_below="@+id/end_time_btn"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_color"
        android:background="@color/colorGrey2"/>
    <Button
        android:id="@+id/reset_time_btn"
        android:padding="10dp"
        android:enabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="RESET"
        android:layout_below="@+id/update_time_btn"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_color"
        android:background="@color/colorPrimary"/>

</RelativeLayout>